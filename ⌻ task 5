#include <iostream>
#include <string> 
#include <cmath>
using namespace std;

int main()
{
     double x1,x2,x3,y1,y2,y3, S, P, a, b, c;
     cin >>x1>>y1>>x2>>y2>>x3>>y3;
     
    a= sqrt(pow(x2 - x1,2) + pow(y2 - y1,2));
	b= sqrt(pow(x3 - x2,2) + pow(y3 - y2,2));
	c= sqrt(pow(x1 - x3,2) + pow(y1 - y3,2));
	S= sqrt(P * (P - a) * (P - b) * (P - c));
	P= (a + b + c) / 2;
	
	cout <<" a="<<a<<" b="<<b<<" c="<<c<<" P="<<P<<" S="<<S<< ends;
	
}
